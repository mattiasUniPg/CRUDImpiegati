
@model ImpiegatoViewModel;

@{
    ViewBag.Title = "Cancella Impiegato";
}

@if (ViewBag.Message != null)
{
    <div roll="alert" class="alert alert-success">
        @ViewBag.Message
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div>Impiegato Cancella Dal Database:</div>
        <hr>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cancella" class="btn btn-primary"/>
            </div>
        </div>

    </div>
}


<div>
    @Html.ActionLink("Indietro","Index")
</div>